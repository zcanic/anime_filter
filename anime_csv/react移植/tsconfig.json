{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../anime-selection-interface/*"]
    }
  },
  "include": [
    "src",
    "../anime-selection-interface/components/**/*",
    "../anime-selection-interface/app/**/*",
    "../anime-selection-interface/hooks/**/*",
    "../anime-selection-interface/lib/**/*"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
